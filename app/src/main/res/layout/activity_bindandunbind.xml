<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.victor.mertial_test.activities.setting.SettingActivity"
    android:weightSum="1"
    android:id="@+id/binding">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>


    <!--請問您想綁定什麼裝置呢？-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:padding="5dp"
        android:textSize="8dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   請問您想綁定什麼裝置呢？"
        android:textColor="#000000"
        android:id="@+id/abc3"
        android:padding="5dp"
        android:textSize="20dp" />

    <ImageButton
        android:background="#00ffffff"
        android:src="@drawable/wearable_device"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:onClick="wearable_device" />
    <ImageButton
        android:background="#00ffffff"
        android:src="@drawable/health_monitor"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="0sp"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:layout_gravity="center"
        android:onClick="healthy_monitor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:padding="3dp"
        android:textSize="7dp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#666666"/>



    <!--您想解除什麼裝置呢-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:padding="3dp"
        android:textSize="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   請問您想解除什麼裝置呢？"
        android:textColor="#000000"
        android:id="@+id/unbinding"
        android:padding="5dp"
        android:textSize="20dp" />

    <RelativeLayout
        android:id="@+id/bindandunbindRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/bindandunbind_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>


</LinearLayout>
